{
  "name": "mailslurp-client",
  "description": "Official client for MailSlurp Email API. Create email addresses in Javascript without a mail server. Send and receive real emails in applications or tests.",
  "version": "15.4.1",
  "license": "MIT",
  "author": "mailslurp.com",
  "homepage": "https://www.mailslurp.com",
  "keywords": [
    "email",
    "smtp",
    "test",
    "e2e",
    "integration",
    "account",
    "receive",
    "send",
    "mailslurp"
  ],
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "repository": "https://github.com/mailslurp/mailslurp-client",
  "scripts": {
    "build": "tsc --outDir dist/",
    "prepublishOnly": "npm run build",
    "integration": "jest",
    "validate": "check-md",
    "docs": "typedoc --plugin typedoc-plugin-markdown --options ./typedoc.json ./src/index.ts",
    "docs:lint": "check-md --fix --cwd ./docs --preset vuepress",
    "fmt": "prettier --write {src,test}/**/*.{ts,json,js}",
    "readme": "node --trace-deprecation --abort-on-uncaught-exception -r ts-node/register scripts/readme.ts"
  },
  "dependencies": {
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^3.0.0",
    "portable-fetch": "^3.0.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/isomorphic-fetch": "~0.0.35",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "body-parser": "^1.19.0",
    "check-md": "^1.0.2",
    "express": "^4.17.1",
    "fast-glob": "^3.2.7",
    "jest": "^27.2.4",
    "jest-diff": "^27.2.5",
    "jest-junit": "^13.0.0",
    "markdownlint-cli": "^0.29.0",
    "prettier": "^2.4.1",
    "remark": "^14.0.1",
    "remark-cli": "^10.0.0",
    "remark-validate-links": "^11.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.7",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "~4.4.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/))(test|spec|use)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results"
        }
      ]
    ],
    "testResultsProcessor": "jest-junit",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/dist/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "check-md": {
    "cwd": "./docs",
    "defaultIndex": [
      "index.md",
      "README.md"
    ],
    "exitLevel": "warn"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
