{
  "name": "mailslurp-client",
  "description": "Send and receive emails in code",
  "version": "8.7.5",
  "license": "MIT",
  "author": "mailslurp.com",
  "homepage": "https://www.mailslurp.com",
  "keywords": [
    "email",
    "smtp",
    "test",
    "e2e",
    "integration",
    "account",
    "receive",
    "send",
    "mailslurp"
  ],
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "repository": "https://github.com/mailslurp/mailslurp-client",
  "scripts": {
    "build": "tsc --outDir dist/",
    "prepublishOnly": "npm run build",
    "integration": "jest",
    "validate": "check-md",
    "docs": "typedoc --options ./typedoc.json ./src/index.ts",
    "fmt": "prettier --write {src,test}/**/*.{ts,json,js}"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "node-fetch": "^2.6.0",
    "portable-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "check-md": "^1.0.0",
    "jest": "^24.1.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.0",
    "typedoc": "^0.15.3",
    "typedoc-plugin-external-module-map": "^1.0.0",
    "typedoc-plugin-markdown": "^2.2.14",
    "typescript": "~3.5.2"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "check-md": {
    "cwd": "./docs",
    "defaultIndex": [
      "index.md",
      "README.md"
    ],
    "exitLevel": "warn"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  }
}
